<h1>Users</h1>

<p id="notice"><%= notice %></p>

<% if is_superadmin? %>

  <p><%= link_to 'Back to the show', '/' %> |
  <%= link_to 'New user', new_user_path %></p>

  <table>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>ID</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Super Admin</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.superadmin %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <!-- see working with JS in Rails: http://guides.rubyonrails.org/working_with_javascript_in_rails.html -->
        <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

<% end %>
