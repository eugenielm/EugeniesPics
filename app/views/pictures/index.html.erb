
<h1>Listing pictures in the '<%= @category.name %>' category</h1>

</br>
  <p><%= link_to 'Back to the categories', categories_path %> |
    <%= link_to 'Back to the index', '/' %></p>
  <% if is_superadmin? %>
    <%= link_to 'New picture', new_category_picture_path %>
  <% end %></p>
</br>

<table>
  <% @pictures.each do |picture| %>
    <div>
      <% if picture.picfile.exists? %>
        <p><%= link_to(image_tag(picture.picfile.url), category_picture_path(picture.category_id, picture)) %></p>
        <% if is_superadmin? %>
          <p><%= link_to 'Edit', edit_category_picture_path(picture.category_id, picture) %> |
          <!-- see working with JS in Rails: http://guides.rubyonrails.org/working_with_javascript_in_rails.html -->
          <%= link_to 'Destroy', category_picture_path(picture.category_id, picture),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></p>
        <% end %>
      </br>
    <% end %>
    </div>
  <% end %>
</table>
