
<h1>Listing pictures in the '<%= @category.name %>' category</h1>

</br>
  <p><%= link_to 'Back to the categories',categories_path %></p>
  <p><%= link_to 'new picture', new_picture_path %></p>
</br>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Category</th>
  </tr>

  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.title %></td>
      <td><%= picture.author %></td>
      <td><%= picture.description %></td>
      <td><%= picture.category.name %></td>
      <td><%= link_to 'Show', category_picture_path(picture.category_id, picture) %></td>
      <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
      <!-- see working with JS in Rails: http://guides.rubyonrails.org/working_with_javascript_in_rails.html -->
      <td><%= link_to 'Destroy', picture_path(picture),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
