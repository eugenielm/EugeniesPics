
<h1>Listing pictures in the '<%= @category.name %>' category</h1>

</br>
  <p><%= link_to 'Back to the categories', categories_path %> |
    <%= link_to 'Back to the index', '/' %></p>
  <% if is_superadmin? %>
    <%= link_to '"' + @category.name + '" category', admin_category_pictures_path %> |
    <%= link_to 'New picture', new_admin_category_picture_path %>]
  <% end %></p>
</br>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Category</th>
  </tr>

  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.title %></td>
      <td><%= picture.author %></td>
      <td><%= picture.description %></td>
      <td><%= picture.category.name %></td>
      <td><%= link_to 'Show', category_picture_path(picture.category_id, picture) %></td>
      <% if is_superadmin? %>
        <td><%= link_to 'Edit', edit_admin_category_picture_path(picture.category_id, picture) %></td>
        <!-- see working with JS in Rails: http://guides.rubyonrails.org/working_with_javascript_in_rails.html -->
        <td><%= link_to 'Destroy', admin_category_picture_path(picture.category_id, picture),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
